            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: { title: { display: true, text: 'åˆ†è§£å±¤ç´š' }},
                y: { title: { display: true, text: 'é‹ç®—æ¬¡æ•¸' }}
            }
        }
    });

    // æ­£äº¤æ€§æ¼”ç¤º
    const orthCtx = document.getElementById('orthogonalityChart').getContext('2d');
    const freq1 = [];
    const freq2 = [];
    const product_orth = [];
    
    for (let n = 0; n < 8; n++) {
        const f1 = Math.cos(2 * Math.PI * 1 * n / 8);
        const f2 = Math.cos(2 * Math.PI * 2 * n / 8);
        freq1.push(f1);
        freq2.push(f2);
        product_orth.push(f1 * f2);
    }

    new Chart(orthCtx, {
        type: 'line',
        data: {
            labels: [0,1,2,3,4,5,6,7],
            datasets: [{
                label: 'é »ç‡1',
                data: freq1,
                borderColor: 'rgb(255, 99, 132)',
                borderWidth: 2
            }, {
                label: 'é »ç‡2',
                data: freq2,
                borderColor: 'rgb(54, 162, 235)',
                borderWidth: 2
            }, {
                label: 'ä¹˜ç© (æ­£äº¤â†’å¹³å‡ç‚º0)',
                data: product_orth,
                borderColor: 'rgb(75, 192, 192)',
                borderWidth: 3,
                backgroundColor: 'rgba(75, 192, 192, 0.1)',
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: { title: { display: true, text: 'æ™‚é–“é» n' }},
                y: { title: { display: true, text: 'æŒ¯å¹…' }}
            }
        }
    });
</script>
